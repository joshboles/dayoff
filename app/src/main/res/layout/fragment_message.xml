<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/other_blue"
    android:orientation="vertical"
    tools:context="com.joshboles.dayoff.MessageActivity$PlaceholderFragment">

    <ImageView
        android:src="@drawable/vacation_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_vacation"
        android:layout_marginTop="@dimen/message_margin_top"
        android:layout_marginBottom="@dimen/message_margin_bottom"
        android:paddingLeft="@dimen/message_padding_side"
        android:paddingRight="@dimen/message_padding_side"
        android:textSize="@dimen/message_font_size"
        android:textColor="@android:color/white"
        android:text="... vacation message placeholder ..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <ImageView
        android:src="@drawable/late_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_late"
        android:layout_marginTop="@dimen/message_margin_top"
        android:layout_marginBottom="@dimen/message_margin_bottom"
        android:paddingLeft="@dimen/message_padding_side"
        android:paddingRight="@dimen/message_padding_side"
        android:textSize="@dimen/message_font_size"
        android:text="... late message placeholder ..."
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <ImageView
        android:src="@drawable/sick_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_sick"
        android:layout_marginTop="@dimen/message_margin_top"
        android:layout_marginBottom="@dimen/message_margin_bottom"
        android:paddingLeft="@dimen/message_padding_side"
        android:paddingRight="@dimen/message_padding_side"
        android:textSize="@dimen/message_font_size"
        android:textColor="@android:color/white"
        android:text="... sick message placeholder ..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</LinearLayout>
